<!-- Add New Abilities to Hero -->
<div>
<h3>Associate Abilities with a Hero:</h3>
<form id="add_hero_abilities" action="/heroes-abilities" method="post">
    Hero: <select name="hid"><br>
    {{#each heroes}}
    <option value="{{hid}}">{{alias}}</option>
    {{/each}}
    </select>
    <br>
    Abilities:<sup>Multi-Select</sup> <select multiple name="names"> 
        {{#each abilities}}
        <option value="{{aid}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="submit" value="Submit">
 </form>
 </div>
 
<!-- Current Heroes -->
<div>
 <h3>Current Heroes by Ability:</h3>
    <table>
    <thead> 
        <tr><th>Hero</th> 
        <th>Ability</th>
    </tr></thead> 
    {{#each heroes_with_abilities}}
    <tbody><tr> 
            <td>{{hero}}</td> 
            <td>{{ability}}</td> 
            <td><button onclick="deleteHeroAbility({{hid}}, {{aid}})">Delete</button></td>
        </tr>
        {{/each}}
        </tbody> 
</table> 
</div>
