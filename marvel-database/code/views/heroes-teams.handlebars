<!-- Add Heroes to a Team -->
<div>
<h3>Associate Heroes with a Team:</h3>
<form id="add_hero_teams" action="/heroes-teams" method="post">
    Hero: <select name="hid"><br>
    {{#each heroes}}
    <option value="{{hid}}">{{alias}}</option>
    {{/each}}
    </select>
    <br>
    Teams:<sup>Multi-Select</sup> <select multiple name="names"> 
        {{#each teams}}
        <option value="{{tid}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="submit" value="Submit">
 </form>
 </div>
 
<!-- Current Heroes and Teams -->
<div>
 <h3>Current Team Members: </h3>
    <table>
    <thead> 
        <tr><th>Hero</th> 
        <th>Team</th>
    </tr></thead> 
    {{#each teams_with_heroes}}
    <tbody><tr> 
            <td>{{hero}}</td> 
            <td>{{team}}</td> 
            <td><button onclick="deleteTeamHero({{hid}}, {{tid}})">Delete</button></td>
        </tr>
        {{/each}}
        </tbody> 
</table> 
</div>
